#!/bin/bash
# vim: set ft=sh

set -euo pipefail

help () {
  cat <<-EOF
  Purges selected service with its volumes.

  usage:
    docosa purge [SERVICE]
EOF
}

purge_service () {
  declare -r SERVICE="$1"

  docker-compose stop "$SERVICE"
  docker-compose rm -v "$SERVICE"
}

main () {

  if [ $# -lt 1 ]; then
    help
    exit 1
  fi

  purge_service "$@"
}

main "$@"

